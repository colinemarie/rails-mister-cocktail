<div class="container">
  <div class="d-flex flex-row">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key %>')">
    </div>
    <div class="d-flex flex-column align-items-start justify-content-between p-5">
      <h1 class="font-weight-bolder"><%= @cocktail.name %> </h1>
      <h3 class="font-weight-bol"> The Recipe </h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.description %> of <%= dose.ingredient.name %>
            <%= link_to  dose_path(dose),
              method: :delete,
              data: {confirm: "Are you sure?"} do %>
                <i class="fas fa-trash"></i>
              <% end %>
          </li>
        <% end %>
      </ul>
      <h3 class="font-weight-bol"> Add an ingredient </h3>
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
      <%= link_to 'DISCOVER MORE >', cocktails_path, class: "primary" %>
    </div>
  </div>
</div>
