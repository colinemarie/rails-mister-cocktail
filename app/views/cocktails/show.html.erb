<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>


<h1><%= @cocktail.name %> </h1>
<ul>
  <% @doses.each do |dose| %>
    <li>
      <%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to 'delete',
      dose_path(dose),
      method: :delete,
      data: {confirm: "Are you sure?"}  %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add dose to cocktail', new_cocktail_dose_path(@cocktail) %>

<%= link_to 'Back to cocktails list', cocktails_path %>
