
<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card" style="background-image: url(<%= cocktail.image_url %>)">
        <%= cocktail.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


